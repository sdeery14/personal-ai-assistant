# MLflow Evaluation Stack Environment Variables
# Copy this file to .env and update values as needed

# =============================================================================
# PostgreSQL Backend Store
# =============================================================================
POSTGRES_USER=mlflow
POSTGRES_PASSWORD=mlflow
POSTGRES_DB=mlflow

# =============================================================================
# MinIO Artifact Store (S3-compatible)
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# =============================================================================
# MLflow Server Configuration
# =============================================================================
MLFLOW_BACKEND_STORE_URI=postgresql://mlflow:mlflow@postgres:5432/mlflow
MLFLOW_S3_ENDPOINT_URL=http://minio:9000
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# =============================================================================
# Evaluation Configuration (used by python -m eval)
# =============================================================================
# OpenAI API Key (required)
OPENAI_API_KEY=sk-your-key-here

# Model for assistant responses (default: gpt-4.1)
OPENAI_MODEL=gpt-4.1

# Model for judge evaluations (default: same as OPENAI_MODEL)
EVAL_JUDGE_MODEL=gpt-4.1

# Regression thresholds
EVAL_PASS_RATE_THRESHOLD=0.80
EVAL_SCORE_THRESHOLD=3.5

# Parallelization settings
MLFLOW_GENAI_EVAL_MAX_WORKERS=10
MLFLOW_GENAI_EVAL_ASYNC_TIMEOUT=600

# MLflow tracking URI (for eval runner)
MLFLOW_TRACKING_URI=http://localhost:5000
