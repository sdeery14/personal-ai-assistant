# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here

# Model Settings
OPENAI_MODEL=gpt-4.1
MAX_TOKENS=2000
ALLOWED_MODELS=gpt-4.1,gpt-4,gpt-4-turbo-preview,gpt-3.5-turbo

# Request Handling
TIMEOUT_SECONDS=30

# Logging
LOG_LEVEL=INFO

# Weather API (Feature 005)
OPENWEATHERMAP_API_KEY=your-openweathermap-api-key-here

# Database (defaults work for local Docker setup)
# POSTGRES_URL=postgresql://assistant:assistant_dev_password@localhost:5432/assistant
# REDIS_URL=redis://localhost:6379/0

# Notification Configuration (Feature 010)
NOTIFICATION_RATE_LIMIT_PER_HOUR=10

# Email Delivery (Feature 010) â€” set NOTIFICATION_EMAIL_ENABLED=true to activate
NOTIFICATION_EMAIL_ENABLED=false
NOTIFICATION_EMAIL_FROM=noreply@example.com
NOTIFICATION_SMTP_HOST=localhost
NOTIFICATION_SMTP_PORT=587
NOTIFICATION_SMTP_USERNAME=
NOTIFICATION_SMTP_PASSWORD=
NOTIFICATION_SMTP_USE_TLS=true

# Proactive Assistant / Scheduler (Feature 011)
SCHEDULER_POLL_INTERVAL_SECONDS=60
SCHEDULER_MAX_CONCURRENT_TASKS=5
PATTERN_OCCURRENCE_THRESHOLD=3
SUGGESTION_CONFIDENCE_THRESHOLD=0.7
PROACTIVE_CHECK_INTERVAL_MINUTES=15
